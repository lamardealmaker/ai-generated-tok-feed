# API Keys
OPENAI_API_KEY=your_openai_key
ELEVENLABS_API_KEY=your_elevenlabs_key  # Required for voice generation

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
FIREBASE_STORAGE_BUCKET=your-bucket-name.appspot.com

# Director Configuration
DIRECTOR_CONFIG_PATH=config/director.yaml
DIRECTOR_LLM_CONFIG=config/director/llm.yaml  # LLM system configuration
DIRECTOR_ASSETS_PATH=assets  # Base path for all assets

# Voice Generation (ElevenLabs)
ELEVENLABS_MODEL=eleven_monolingual_v1  # Voice model to use
ELEVENLABS_VOICE_STABILITY=0.75  # Default voice stability (0-1)
ELEVENLABS_VOICE_SIMILARITY=0.75  # Default voice similarity boost (0-1)

# Music Configuration
MUSIC_LIBRARY_PATH=assets/audio/music  # Path to music library
MUSIC_CATALOG_FILE=catalog.json  # Music catalog file
DEFAULT_MUSIC_VOLUME=0.5  # Default background music volume (0-1)

# Style Configuration
STYLE_CONFIG_PATH=config/director/styles.yaml  # Style presets configuration
STYLE_VARIATIONS_ENABLED=true  # Enable style variations
DEFAULT_VARIATION_STRENGTH=0.3  # Default style variation strength (0-1)

# Video Processing
MAX_VIDEO_LENGTH=60  # seconds
DEFAULT_VIDEO_QUALITY=1080p
TEMP_DIR=./tmp
ENABLE_GPU=false  # Enable GPU acceleration for video processing

# Asset Management
ASSET_CACHE_SIZE=1024  # Asset cache size in MB
ASSET_CLEANUP_INTERVAL=3600  # Asset cleanup interval in seconds

# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development  # development, production
DEBUG_LOGGING=true  # Enable debug logging
